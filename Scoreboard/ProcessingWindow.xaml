<Window x:Class="Scoreboard.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scoreboard"
        mc:Ignorable="d"
        Title="Processing" Height="60" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ScoreboardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="Black">
        <Grid Margin="4" Background="{StaticResource LightBlueGradient}">
            <Label Name="SelectLabel" Grid.Row="0" Margin="8,3,0,0" Foreground="White" FontFamily="./#DINEngschrift" FontSize="32" FontWeight="Bold">Loading...</Label>
        </Grid>
    </Grid>
</Window>
