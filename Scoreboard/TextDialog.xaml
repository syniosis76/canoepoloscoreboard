<Window x:Class="Scoreboard.TextDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Title" Height="200" Width="500" Background="Black" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Height="28" HorizontalAlignment="Left" Margin="12,51,0,0" Name="_textLabel" VerticalAlignment="Top" Width="126" Foreground="White">Label</Label>
        <TextBox Height="23" Margin="144,53,12,0" Name="_textTextBox" VerticalAlignment="Top" />
        <Button Height="23" HorizontalAlignment="Left" Margin="310,0,0,12" Name="bOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="bOK_Click">_OK</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="bCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="bCancel_Click">_Cancel</Button>
        <Label Height="28" HorizontalAlignment="Left" Margin="12,51,0,12" Name="_actionMessageLabel" VerticalAlignment="Bottom" Width="126" Foreground="White">Action Message...</Label>
    </Grid>
</Window>
