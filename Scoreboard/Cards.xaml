            <Style TargetType="ListBoxItem">
                <Style.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{x:Static SystemColors.HighlightColor}"/>                    
                </Style.Resources>
            </Style>
        </Grid.Resources>
        <Grid Margin="4" Background="{StaticResource LightBlueGradient}">
