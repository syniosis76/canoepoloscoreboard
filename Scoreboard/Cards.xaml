            </Grid.ColumnDefinitions>
            <ComboBox Name="_teamComboBox" Grid.Row ="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="8,8,8,4" FontFamily="./#DINEngschrift" FontSize="30">
                
            </ComboBox>
            <ListBox Name="_cardsList" Grid.Row ="1" Grid.Column="0" Margin="8,4,4,0" FontFamily="./#DINEngschrift" FontSize="30">
                <ListBox.Items>
                    <ListBoxItem Height="50" Tag="Green">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Image Source="/Scoreboard;component/images/green_card.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock VerticalAlignment="Center">Green Card</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Height="50" Tag="Yellow">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Image Source="/Scoreboard;component/images/yellow_card.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock VerticalAlignment="Center">Yellow Card</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Height="50" Tag="Red">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Image Source="/Scoreboard;component/images/red_card.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock VerticalAlignment="Center">Red Card</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox.Items>   
            </ListBox>
